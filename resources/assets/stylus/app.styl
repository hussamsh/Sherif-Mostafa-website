//Mixins 
align-text-center-veritcal()
	margin:0
	padding:0
	display:table-cell
	text-align:center
	vertical-align:middle
	width:100%
	position:absolute

title-header-double(margin-top)
	margin-top:margin-top
	max-width:300px
	padding: 0
	border: none
	border-top: medium double #333
	color: #333
	text-align: center

title-header-double-after(content , background-color)
	content: content		
	display: inline-block
	position: relative
	top: -0.7em
	font-size: 1.5em
	padding: 0 0.25em
	background: background-color

title-header-styling()
	font-size:3em
	font-weight:400
	font-family: 'Lobster', cursive;


